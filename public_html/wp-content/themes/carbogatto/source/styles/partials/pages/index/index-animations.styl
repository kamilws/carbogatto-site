@keyframes appear
  from
    opacity 0
  to
    opacity 1
@keyframes appear-zoom
  from
    opacity 0
    transform scale(.1)
  to
    opacity 1
    transform scale(1)
@keyframes slide-to-right
  from
    transform translateX(-100%)
  to
    transform translateX(0)
@keyframes turn-arrow
  from
    transform rotate(-165deg)
  to
    transform rotate(-30deg)
@keyframes dash
  to
    stroke-dashoffset 0
@keyframes rotate
  from
    transform rotate(0)
  to
    transform rotate(360deg)