@import "mixins.styl"

section.main.index
  .top-block
    height 100vh
    .video-block
      position relative
      margin-bottom 1em
      overflow hidden
      margin-left -(container-padding)
      margin-right -(container-padding)
      .preloader
        position absolute
        left 10px
        top 100%
        margin -40px 0 0 0
        background image-url('pages/index/play.png') no-repeat top center / contain
        width 25px
        height @width
        z-index 3
        &.__loading
          background-image image-url('pages/index/preloader.png')
          animation rotate 1s infinite
        &.__play
          background-image image-url('pages/index/play.png')
        &.__pause
          background-image image-url('pages/index/pause.png')
      .bottom-line
        position absolute
        left 0
        bottom -1px
        height 15px
        width 100%
        z-index 2
        background linear-gradient(to bottom, rgba(black, .01), rgba(black, 1) 50%, rgba(black, 1))
    .text-block
      padding-bottom 1em
    p
      text-align center
    .arrow
      width 30px
      display block
      margin 0 auto 0 auto
    //Телефоны альбом
    @media (max-width mup) and (min-aspect-ratio index-album)
      height auto
      margin-bottom 7em

    @media (min-width mup)
      mup-video-block()
      padding-top 0
      height calc(100vh - 80px)
      .arrow
        display none
      .video-block
        position relative
        margin-top -17.3%
        margin-bottom 0
        .preloader
          top 32%
          left auto
          right 20px
          width 50px
          margin-top 0
          height @width
        .bottom-line
          height 25px
        video
          width 100%
          position relative
          display block
      .text-block
        position absolute
        z-index 3
        left 0
        bottom 0
        width 100%
        background transparent
        box-sizing border-box
        padding-bottom 0
      @media (max-aspect-ratio index-small)
        .video-block
          margin-top -9%
          .preloader
            top 20%
      @media (max-aspect-ratio index-medium)
        .text-block
          padding-bottom 2em
        .video-block
          margin-top 0
          .preloader
            top 5%
      @media (max-aspect-ratio index-large)
        height initial
        .text-block
          position static