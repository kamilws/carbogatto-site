section.main.legal
  margin-bottom 4em
  .page-title
    text-transform uppercase
    font-weight 300
    font-size 2.08em
    text-align center
    margin 1.5em 0 1em 0
    letter-spacing .1em
  .par
    line-height 1.4
    margin 0 0 2em 0
  .title
    position relative
    padding 10px 0 10px 35px
    margin-bottom .5em
    img
      position absolute
      left 0
      top 0
      width 25px
    span
      text-transform uppercase
      font-weight bold
      letter-spacing .07em
  @media (min-width mup)
    .page-title
      font-size 2.42em
    .par
      &.__main
        width 740px
        margin 0 auto 6em auto
        text-align center
    .title
      padding 20px 0 20px 75px
      margin-bottom .7em
      img
        width 50px
      span
        font-size 1.1em
        letter-spacing .1em
    .blocks
      @extend .clearfix
      .block
        float left
        width 47%
        box-sizing border-box
        margin-bottom 1.5em
        &:nth-child(odd)
          clear both
          margin-right 6%
        &.__full-width
          float none
          clear both
          width auto
          margin-right 0

