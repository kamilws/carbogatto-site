.accessories-modal
  display none
  position relative
  z-index 100
  &.__bg-transparent
    //border 5px solid red
    .bg
      background transparent
  .bg
    left 0
    top 0
    width 100%
    height 100%
    position fixed
    z-index 100
    transition background .8s
    background rgba(black, .7)
  .content
    position fixed
    z-index 101
    width 100%
    height 100%
    left 0
    top 0
    box-sizing border-box
    overflow-y auto
    padding 60px 0 1em 0
    .container
      padding 0 8px
    .close
      cursor pointer
      position absolute
      right 5px
      top -40px
      width 15px
      height @width
      z-index 3
      padding 8px
      fill color-blue
    .gallery-block
      background white
      position relative
      .prev, .next
        position absolute
        top 50%
        cursor pointer
        width 11px
        height 22px
        background image-url('main/arrow_prev.png') no-repeat center center / 11px 22px
        left 5px
        margin-top -30px
        z-index 1
        padding 10px
      .next
        left auto
        right 5px
        background-image image-url('main/arrow_next.png')
      .pager
        position absolute
        left 0
        bottom 1em
        width 100%
        text-align center
        z-index 1
        &-inner
          display inline-block
          margin 0
          padding 0 .2em
          background rgba(black, .5)
          border-radius 2em
          li
            padding 0
            display inline-block
            width 4px
            height @width
            background white
            border-radius 50%
            margin 0 3px
            button
              display none
            &.slick-active
              background color-blue
      .slides
        .slide
          text-align center
          img
            max-height 90vh
            display inline-block
    .text-block
      background white
      padding 1.5em 1em 2em 1em
      .text-top
        margin-bottom .5em
        .title
          font-size 1.4em
          text-transform uppercase
          font-weight bold
      .text-bottom
        .table-title
          text-transform uppercase
          font-weight bold
          font-size 1.2em
          margin .5em 0 .3em 0
        table
          min-width 60%
          border-bottom 1px solid #d6d6d6
          td
            padding  .5em .5em .5em 0
            border-top 1px solid #d6d6d6
            &:first-of-type
              color #6d6d6d

section.main.accessories
  .items
    .item
      box-sizing border-box
      position relative
      cursor pointer
      @extend .clearfix
      .spacer
        background bottom left / cover
        float left
        width 100%
        &.__desktop
          display none
      .content
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        overflow hidden
        padding 1.5em 20px 0 20px
        box-sizing border-box
      .title
        text-transform uppercase
        font-size 1.67em
        font-weight bold
        margin-bottom .3em
      .description
        font-size 1.33em
      .button-component
        position absolute
        left 20px
        bottom @left
@media (min-width mup)
  .accessories-modal
    .content
      padding-top 100px
      .container
        width 920px
      .close
        top -50px
        width 23px
        height @width
      .gallery-block
        .prev, .next
          width 22px
          height 44px
          margin-top -22px
          background-size 22px 44px
          padding-top 0
          padding-bottom 0
        .prev
          left 20px
        .next
          right 20px
        .pager
          bottom 1.5em
          &-inner
            padding 0 .3em
            li
              width 7px
              height @width
              margin 0 5px
        .slides
          .slide
            img
              max-height 750px
      .text-block
        padding 1.5em 3em
        .left-col
          float left
          width 65%
        .right-col
          float right
          width 28%
        .text-top
          @extend .clearfix
          .title
            font-size 1.92em
            margin-bottom 0
          .button-component
            display block
            text-align center
            margin-top .5em
        .text-bottom
          @extend .clearfix
          .table-title
            font-size 1.21em
          table
            width 100%
  section.main.accessories
    .items
      display flex
      flex-wrap wrap
      align-items stretch
      .item
        flex-basis 33.3%
        overflow hidden
        height 480px
        &.__double
          flex-basis 66.6%
        .content
          padding 2em 30px 30px 30px
        .title
          font-size 1.94em
        .description
          font-size 1em
        .button-component
          left 30px
          bottom @left
        .spacer
          height 100%
          transition transform 1s
          &.__desktop
            display block
          &.__mobile
            display none
        &:hover
          .spacer
            transform scale(1.05)