section.main.buy
  .block-title
    text-transform uppercase
    padding-bottom .5em
    margin-bottom 1em
    border-bottom 1px solid #b7b7b7
    font-weight bold
    color #080808
    font-size 1.33em
  //Options
  .options-block
    //Option
    .option
      margin-bottom 3.5em
      .row
        @extend .clearfix
        border-bottom 1px solid lighten(#b7b7b7, 70%)
        padding-bottom 1em
        margin-bottom 1em
        .hex
          float left
          margin-right .5em
          width 20px
          height @width
          &.__gradient
            background image-url('pages/buy/gradient.png') no-repeat top center / contain
          &.__carbon
            background image-url('pages/buy/carbon.png?ver=1') no-repeat top center / contain
        .title
          margin-right 10em
          margin-bottom .2em
          font-size 1.33em
          &.__margin-top
            margin-top .3em
        .desc
          margin-right 10em
          position relative
          padding-left 20px
          &.__margin-top
            margin-top .7em
            margin-left .2em
          .desc-pop-up
            display none
            position absolute
            z-index 1
            left 30px
            top -30px
            background white
            padding 27px 10px 10px 10px
            box-shadow 0 0 40px rgba(black, .3)
            border-top 2px solid color-blue
            min-width 250px
            max-width 400px
            .pop-up-container
              max-height 290px
              overflow auto
              font-size 1.2em
            .pop-up-close
              position absolute
              right 8px
              top @right
              width 18px
              height @width
              fill color-blue
            .pop-up-caret
              caret(white, 8px, left)
              position absolute
              top 25px
              left -15px
            .pop-up-title
              font-weight bold
              margin-bottom .3em
            .pop-up-text
              margin-bottom .6em
            .pop-up-img
              margin-bottom .6em
          .desc-text
            color #8a8a8a
            font-size 1.33em
          .info-icon
            display inline-block
            width 15px
            height @width
            position absolute
            left 0
            top 0
            background image-url('main/info.svg') no-repeat center center / contain
        .price
          float right
          color color-blue
          font-weight bold
          margin .3em 1.3em 0 0
          text-align right
          font-size 1.33em
        .individual
          clear both
          width 180px
          outline none
          border 1px solid #b7b7b7
          box-sizing border-box
          padding .5em .8em
          display block
          margin-bottom -.3em
          border-radius 0
          font-size 1.33em
        .button
          float right
          text-align center
          position relative
          input[type=radio]
            position absolute
            left 0
            top 0
            opacity .01
          em
            display inline-block
            width 42px
            height 22px
            background #8b8b8b image-url('main/ios-checkbox-bg.svg') 0 1px / 22px no-repeat
            transition background-position-x .5s, background-color .5s
            border-radius 2em
          input[type=radio]:checked + em
            background-color black
            background-image image-url('main/ios-checkbox-bg-checked.svg')
            background-position-x 100%

  //Десктоп
  @media (min-width mup)
    .block-title
      font-size 1.2em
    //Options
    .options-block
      //Option
      .option
        .row
          .hex
            width 50px
            height @width
            margin 0 15px 0 0
          .title
            font-size 1.2em
            margin-right 0
            float left
            width 33%
            padding-top .7em
            &.__margin-top
              margin-top 0
            &.__individual
              width 25%
            &.__with-hex
              width calc(33% - 65px)
          .desc
            font-size 1.2em
            float left
            width 35%
            margin-right 0
            padding-top .7em
            padding-left 35px
            &.__margin-top
              margin-top 0
              margin-left 0
            .desc-pop-up
              width 500px
              min-width 0
              max-width none
              top -30px
              left 42px
              border-top-width 3px
              padding 38px 15px 15px 15px
              box-sizing border-box
              .pop-up-container
                font-size 1em
                max-height none
              .pop-up-close
                width 23px
                height @width
                top 12px
                right @top
                cursor pointer
              .pop-up-caret
                top 35px
                left -25px
                caret(white, 15px, left)
            .info-icon
              cursor pointer
              width 27px
              height @width
              top 14px
          .price
            width 12%
            font-size 1.2em
            box-sizing border-box
            margin-top .7em
            padding-right 1em
          .individual
            clear none
            float right
            width 550px
            margin-right 5.5em
            font-size 1.2em
            border 2px solid #dddddd
          .button
            em
              cursor pointer
              width 87px
              height 48px
              background-size 45px
              background-position-y 3px