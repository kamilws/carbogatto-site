section.main.buy
//Params table
  .params-table
    border-collapse collapse
    font-size .8em
    margin-bottom 2em
    td
      border-top 1px solid darken(color-blue, 50%)
      border-bottom 1px solid darken(color-blue, 50%)
      padding .5em
      text-align right
      &:first-of-type
        color #787878
        span
          text-transform uppercase
          &::after
            content ' '
        em
          font-style normal
      &:last-of-type
        padding-right 0
