  //Top
  .top-block
    background black
    color white
    position sticky
    top 48px
    z-index 3
    margin-bottom 2em
    transition height .3s
    height 520px
    box-sizing border-box
    .site-container
      position relative
      height 100%
    .title
      position absolute
      left 0
      top 15px
      width 100%
      text-transform uppercase
      font-size 1.9em
      text-align center
      font-weight 300
      letter-spacing .1em
    .view
      text-transform uppercase
      font-size .69em
      width 15em
      position absolute
      left calc(50% - 7.5em)
      top 45px
      z-index 1
      @extend .clearfix
      &-title
        margin .6em 1em 0 0
        float left
      &-value
        float left
        @extend .clearfix
        label
          float left
          cursor pointer
          input[type=radio]
            display none
          span
            display inline-block
            padding .4em 1em
            border 1px solid color-blue
            color color-blue
          input[type=radio]:checked + span
            color black
            background color-blue
    .bike-images-block
      height 267px
      position absolute
      width 100%
      max-width 500px
      right 0
      top 60px
      transition all .3s
      .bike
        display block
        width 100%
        position relative
      .details
        position absolute
        left 0
        top 0
        width 100%
      .links
        position absolute
        left 0
        top 0
        width 100%
    .params
      top 320px
      width 100%
      left 0
      position absolute
    .__buy-button
      position absolute
      left calc(50% - 6em)
      width 12em
      box-sizing border-box
      text-align center
      bottom 60px
    .total
      background #171717
      @extend .clearfix
      text-transform uppercase
      padding 1.5em 0
      font-size .9em
      position absolute
      left 0
      bottom 0
      width 100%
      box-sizing border-box
      small
        font-size 1em
        float left
        color #787878
      em
        font-style normal
        float right
        i
          font-style normal
          margin-right .7em
        b
          color color-blue
          span:first-of-type
            &::after
              content ' '
    .video-container
      position absolute
      height 100%
      width 100%
      left 0
      top 0
      video.dots
        position absolute
        left 0
        bottom 90px
        width 100%
    .to-main-view
      display none
    //Маленький вариант
    &.__small
      height 95px
      background #171717
      .title
        top 10px
        box-sizing border-box
        padding-left container-padding
        font-size 1.5em
        text-align left
        font-weight normal
        letter-spacing initial
      .__buy-button
        left container-padding
        bottom 15px
      .view, .params-table
        display none
      .bike-images-block
        width 140px
        height 95px
        right 0
        top 0
      .total
        background none
        font-size 1.2em
        bottom 35px
        small
          display none
        em
          float none
          i
            font-weight bold
      .video-container
        width 140px
        height 95px
        left auto
        right 0
        video.dots
          bottom 0

