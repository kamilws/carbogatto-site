//Хелперы
container-styles()
  .container
    position relative
    background linear-gradient(to top, rgba(black, 1), rgba(black, .01) 20px)

block-base(pos = top center)
  margin-bottom 5em
  background-size auto
  background-position pos

slide()
  position relative
  min-height calc(100vh - 50px)
  padding-bottom 4em
  box-sizing border-box
  overflow hidden
  //Мобайл альбом альбом
  @media (max-width (mup - 1px)) and (min-aspect-ratio index-album)
    min-height 0
    margin-bottom 40px
  //Десктоп
  @media (min-width mup)
    min-height 100vh

mup-video-block()
  position relative
  height 100vh
  min-height auto
  box-sizing border-box
  overflow hidden
  margin-bottom 3.5em
  .site-container
    max-width none
  .container
    width auto
    position static
  .video-container
    margin-top -10%
  .text-block
    position absolute
    left 0
    bottom 0
    width 100%
    padding-bottom 0
  @media (max-aspect-ratio index-small)
    .video-container
      margin-top -5%
  @media (max-aspect-ratio index-medium)
    .video-container
      margin-top 0
    .text-block
      padding-bottom 1.5em
  @media (max-aspect-ratio index-large)
    height initial
    .text-block
      position static

