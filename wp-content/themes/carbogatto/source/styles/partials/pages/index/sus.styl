@import "mixins.styl"

section.main.index
  .suspension-block
    container-styles()
    slide()
    .logos
      position absolute
      top -80px
      right 15px
      width 110px
      height 65px
      display block
      opacity 0
      z-index 2
      background image-url('pages/index/sus-logos-mob.png') no-repeat top center / contain
    .text-block
      position relative
      text-align center
      margin-top 9em
    .bike
      position absolute
      top 100%
      left 0
      width 220px
      @extend .clearfix
      text-transform uppercase
      color rgba(#c6c6c6, .6)
      font-size .94em
      padding 25px 2em 2.5em 2em
      text-align center
      box-sizing border-box
      span
        float right
        width 60px
      .icon
        position absolute
        top 0
        left 0
        width 130px
        height 64px
        .bike-icon
          width 100%
          height 100%
          opacity .3
        .shocks
          position absolute
          left 39%
          top 5%
          width 45%
          opacity 0
    //Телефон альбом
    @media (max-width mup) and (min-aspect-ratio index-album)
      .logos
        top 20px
        right -280px
      .text-block
        text-align left
        margin-top -20px
        margin-right 280px
      .bike
        z-index 3
        left auto
        right 130px
        width 160px
        top calc(100% - 20px)
        padding-top 80px
        border-left 1px solid rgba(#c6c6c6, .3)
        border-right 1px solid rgba(#c6c6c6, .3)
        padding-bottom 0
        span
          display block
          width 100px
          margin 0 auto
          float none
        .icon
          left 15px
          top 10px

    //Десктоп
    @media (min-width mup)
      mup-video-block()
      .logos
        position static
        width 383px
        height 93px
        background-image image-url('pages/index/sus-logos.png')
        margin 0 auto
      .text-block
        min-height 0
      .bike
        width 500px
        font-size 1.21em
        padding 2.5em 0 2.5em 325px
        text-align left
        right 55%
        border-top 2px solid rgba(#c6c6c6, .3)
        border-bottom @border-top
        box-sizing border-box
        left auto
        .icon
          width 284px
          height 132px
          left 5px
          top 10px
        span
          float none
          width initial
      //Передняя подвеска
      &.__front
        .bike
          top 20%
      //Задняя подвеска
      &.__rear
        .bike
          top 9%
      @media (max-aspect-ratio index-small)
        &.__front
          .bike
            top 30%
        &.__rear
          .bike
            top 15%
